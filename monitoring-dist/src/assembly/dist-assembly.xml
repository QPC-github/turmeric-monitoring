<assembly>
	<id>bin</id>
	<formats>
		<format>dir</format>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main/</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/lib</outputDirectory>
			<unpack>false</unpack>
			<includes>
				<include>
					org.ebayopensource.turmeric.intf:SOAMetricsQueryService
				</include>
				<include>
					org.ebayopensource.turmeric.impl:SOAMetricsQueryServiceImpl
				</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>/lib</outputDirectory>
			<unpack>false</unpack>
			<includes>
				<include>
					org.ebayopensource.turmeric.monitoring:*
				</include>
			</includes>
                        <excludes>
                                <exclude>org.ebayopensource.turmeric.monitoring:console</exclude>
                        </excludes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>/war</outputDirectory>
			<unpack>false</unpack>
                        <includes>
 				<include>*:war</include>
                        </includes>
		</dependencySet>
	</dependencySets>
</assembly>
